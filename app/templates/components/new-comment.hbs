{{yield}}

{{#if addNewComment}}
     <h3>New Comment</h3>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Name</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="content">Comment</label>
          {{input value=content id="content"}}
        </div>

        <button {{action 'saveComment'}}>Save</button>
      </form>
    </div>
 {{else}}
    <button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
